tags:
  - Contacts
summary: Edit contact
operationId: patchContact
description: Edit contact data
security:
  - bearerAuth: []
parameters:
  - in: path
    name: id
    required: true
    schema:
      type: string
      example: '65ca67e7ae7f10c88b598384'
requestBody:
  content:
    multipart/form-data:
      schema:
        type: object
        properties:
          name:
            description: "Contact's name"
            type: string
            example: 'Viktor Ivanov'
          phoneNumber:
            description: "Contact's phohe number"
            type: string
            example: '+380674376978'
          contactType:
            description: 'What number is this'
            type: string
            enum: ['work', 'home', 'personal']
          isFavourite:
            description: 'Is the favorite'
            type: boolean
            example: true
          photo:
            description: "Link to contact's photo"
            type: string
            example: 'https://res.cloudinary.com/uqwgdu/image/upload/image.png'
responses:
  '200':
    description: Update contact
    content:
      application/json:
        schema:
          type: object
          required:
            - status
            - message
            - data
          properties:
            status:
              type: integer
              example: 200
            message:
              type: string
              example: Successfully update a contact!
            data:
              type: object
              $ref: '../../../components/shemas/contact.yaml'
  '404':
    $ref: '../../../components/responses/404.yaml'
